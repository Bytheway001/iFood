<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>

<div class="container">
	<h1 class="text-center"><%= @restaurant.nombre %></h1>
	<div class="row">
		<div class="col-sm-6">
			<h4>Menu</h4>
			<% @restaurant.dishes.each do |dish| %>
			<%= render partial: 'partials/dishes/thumb',locals: {dish:dish} %>
			<% end %>
		</div>
		<div class="col-sm-6">
			<h4>Mi Carrito</h4>
			<div class="cart">
				<div class="panel panel-default">
					<div class="panel-heading">
						<span class="glyphicon glyphicon-shopping-cart"></span>Mi Carrito
						<span class="pull-right">Costo de Envio: <i id="costo_envio"><%= @price %></i> R$</span>
					</div>
					<div class="panel-body" style='min-height: 50vh'>
						<div class="cart-detail list-group">
							
						</div>
					</div>
					<div class="panel-footer">
						<button id='order-confirm' class='btn btn-success btn-sm' onclick='confirmOrder(<%=@restaurant.id %>)'>Confirmar Orden</button>

						<span class="pull-right" id='total'>Total: 0.00</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


</div>
<div class="modal fade bs-example-modal-sm" tabindex="-1" id='modal' role="dialog" aria-labelledby="mySmallModalLabel">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			
		</div>
	</div>
</div>