<div class="container">
	<div class="row" style='margin-bottom:20px'>
		<h1>Mis restaurants</h1>
		<%=link_to "<span class='glyphicon glyphicon-plus'></span> Agregar Restaurant".html_safe,new_users_restaurant_path,:class=>'btn btn-info btn-sm' %>
	</div>


	<div class="row">
		<table class="table table-striped table-hover">
			<tr><th>Logo</th><th>Nombre</th><th>Telefono</th><th>Direcci√≥n</th><th>Email</th><th colspan='3'>Acciones</th></tr>
			<% @restaurants.each do |r| %>
			<tr>
				<td><%= image_tag r.logo(:avatar)	 %></td>
				<td><%= r.nombre %></td>
				<td><%= r.telefono %></td>
				<td><%= r.direccion %></td>
				<td><%= r.email %></td>
				<td><%= link_to '<span class="glyphicon glyphicon-euro" style="color:green"></span>'.html_safe, users_restaurant_sales_path(r) %></td>
				<td><%= link_to '<span class="glyphicon glyphicon-pencil" style="color:blue"></span>'.html_safe, users_restaurant_path(r) %></td>
				<td><%= link_to '<span class="glyphicon glyphicon-remove" style="color:red"></span>'.html_safe, users_restaurant_path(r), :method=>:delete %></td>


			</tr>
			<% end %>
		</table>
	</div>
</div>