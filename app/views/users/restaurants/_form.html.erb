<%= form_for [:users,@restaurant],html: { multipart: true } do |f| %>
<div class="form-group">
	<%= f.label :nombre %>
	<%= f.text_field :nombre,:class=>'form-control input-sm' %>
</div>
<div class="form-group">
	<%= f.label :telefono %>
	<%= f.text_field :telefono,:class=>'form-control input-sm' %>
</div>
<div class="form-group">
	<%= f.label :direccion %>
	<%= f.hidden_field :lat,:id=>'lat' %>
	<%= f.hidden_field :long,:id=>'long' %>
	<div class="input-group">
	<%= f.text_field :direccion,:class=>'form-control input-sm', :id=>'gmaps-direccion' %>
	<div class="input-group-btn">
		<button type='button' id='search' class="btn btn-default btn-sm"><span class='glyphicon glyphicon-search'></span></button>
	</div>
	</div>
</div>
<div class="form-group">
	<%= f.label :email %>
	<%= f.text_field :email,:class=>'form-control input-sm' %>
</div>
<div class="form-group">
	<%= f.file_field :logo,:class=>'form-control input-sm',:id=>'file-input',:onchange=>"readURL(this,'#img')",:style=>'display:none' %>
</div>
<div class="form-group">

	<%= f.submit %>
</div>
<% end %>